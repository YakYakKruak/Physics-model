<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import vt.smt.Render.*?>

<Scene xmlns:fx="http://javafx.com/fxml" fx:controller="vt.smt.Controller" width="800" height="800">

<BorderPane style="-fx-background-color: darkviolet;">

    <center>
        <VectorField onMouseClicked="#onFieldClick" fx:id="field"/>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="50" translateY="-10">
            <Charge fx:id="prototype_positive" scaleY="1.8" scaleX="1.8"/>
            <Charge fx:id="prototype_negative" scaleY="1.8" scaleX="1.8"/>
        </HBox>
    </bottom>
    <right>
        <VBox alignment="CENTER" style="-fx-border-radius: 10px ; -fx-background-color: blueviolet; -fx-min-width: 100px; -fx-max-height: 200px;">
            <Label>Установить заряд системы:</Label>
        </VBox>
    </right>
</BorderPane>

</Scene>
