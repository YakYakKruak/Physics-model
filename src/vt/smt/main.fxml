<Scene xmlns:fx="http://javafx.com/fxml" fx:controller="vt.smt.Controller" width="800" height="800">
<BorderPane style="-fx-background-color: black;">
    <top>
    </top>
    <center>
        <VectorField onMouseClicked="#onFieldClick" fx:id="field"/>
    </center>
<right>
        <VBox alignment="CENTER"  style=" -fx-padding: 10px; -fx-spacing:10px ;-fx-border-color:white; -fx-border-radius: 10px ; -fx-background-color: black; -fx-min-width: 100px; -fx-max-height: 200px;">
            <Label style="-fx-text-fill: white;">Установить заряд системы:</Label>
            <HBox spacing="5">
                <TextField style=" -fx-text-fill: white; -fx-max-width: 80px; -fx-background-color: black; -fx-border-color: white; -fx-border-radius: 2px"  />
                <ComboBox style="-fx-max-width: 50px; -fx-text-fill: white; -fx-background-color: black; -fx-border-color: white; -fx-border-radius: 2px">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="пКл" />
                            <String fx:value="нКл" />
                            <String fx:value="мкКл" />
                            <String fx:value="мКл" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
            <Label style="-fx-text-fill: white;">Установить ширину пластин:</Label>
            <HBox style="-fx-spacing: 10px">
                <TextField style=" -fx-text-fill: white; -fx-max-width: 80px; -fx-background-color: black; -fx-border-color: white; -fx-border-radius: 2px"  />
                <Label style="-fx-text-fill: white;"> см </Label>
            </HBox>
        </VBox>
</right>
    <bottom>
        <HBox alignment="CENTER" spacing="50" translateY="-10">
            <Charge fx:id="prototype_positive" scaleY="1.8" scaleX="1.8"/>
            <Charge fx:id="prototype_negative" scaleY="1.8" scaleX="1.8"/>
        </HBox>
    </bottom>
</BorderPane>

</Scene>
